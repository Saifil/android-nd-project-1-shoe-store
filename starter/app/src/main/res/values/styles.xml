<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/text_white</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomText">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomText.Small" parent="CustomText">
        <item name="android:textSize">@dimen/text_size_18</item>
    </style>

    <style name="CustomText.Regular" parent="CustomText">
        <item name="android:textSize">@dimen/text_size_20</item>
    </style>

    <style name="CustomText.ExtraLarge" parent="CustomText">
        <item name="android:textSize">@dimen/text_size_32</item>
    </style>

    <style name="TextInputHint">
        <item name="android:backgroundTint">@color/text_white</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textColorHint">@color/text_color_hint</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AppTheme.Button.Accent" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Button.Accent.Dark" parent="AppTheme.Button.Accent">
        <item name="colorButtonNormal">@color/colorAccentDark</item>
    </style>

    <style name="AppTheme.Button.Accent.Light" parent="AppTheme.Button.Accent">
        <item name="colorButtonNormal">@color/colorAccentLight</item>
    </style>

    <dimen name="text_size_26">26sp</dimen>
    <dimen name="text_size_32">32sp</dimen>
</resources>
